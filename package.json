{
  "name": "history-tracker",
  "version": "1.0.0",
  "description": "Cross-platform browser history tracking extension",
  "main": "src/background.js",
  "scripts": {
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "webpack --config webpack.chrome.js",
    "build:firefox": "webpack --config webpack.firefox.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.{js,html,css}\" \"tests/**/*.js\"",
    "package": "node scripts/package.js",
    "prepare": "npm run build"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/tests/mocks/styleMock.js"
    }
  },
  "keywords": [
    "browser-extension",
    "history",
    "chrome",
    "firefox",
    "ios"
  ],
  "author": "OpenHands",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@testing-library/jest-dom": "^5.16.5",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "fake-indexeddb": "^4.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.8",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "webpack-merge": "^5.9.0"
  }
}